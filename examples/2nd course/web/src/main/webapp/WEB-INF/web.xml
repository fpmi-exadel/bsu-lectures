<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Web Demo Application</display-name>

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>org.exadel.lectures.second.web.hello.HelloServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>forward-to-jsp</servlet-name>
        <servlet-class>org.exadel.lectures.second.web.hello.ForwardToJspServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forward-to-jsp</servlet-name>
        <url-pattern>/forward-to-jsp</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
</web-app>
